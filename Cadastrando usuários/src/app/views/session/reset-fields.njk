<div class="item">
    <div>Email</div>
    <div class="input">
    <input required type="email" name="email" value="{{user.email}}" placeholder="Digite seu email" onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
    <input required type="password" name="password"
    placeholder="Digite uma nova senha"/>
    </div>

    <div class="item">
    <div>Senha</div>
    <div class="input">
    <input required type="password" name="passwordRepeat"
    placeholder="Repita a nova senha"/>
    </div>
</div>

<input type="hidden" name="token" value="{{token}}"/>
