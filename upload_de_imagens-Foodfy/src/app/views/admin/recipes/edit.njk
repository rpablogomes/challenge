{% extends "admin/admin_layout.njk" %}

{% block content %}
    <div class="EditReceiptTop">

        <h1>Criando receita</h1>

        <form method="POST" action="/admin/recipes?_method=DELETE">
            <input  hidden="hidden" value="{{receipt.deletePossibility}}">
            <input hidden="hidden" name="id" value="{{receipt.id}}">
            <button  class="Deletebutton">Deletar</button>
        </form>

        <form method="POST" action="/admin/recipes?_method=PUT">

            <button type="submit" class="button">Salvar receita</button>

        </div>

        {% include "./fields.njk" %}

        <input hidden="hidden" name="id" value="{{receipt.id}}">
    </form>

{% endblock %}