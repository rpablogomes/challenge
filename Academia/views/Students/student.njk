{% extends "layout.njk" %}

{% block content %}

    <div class="Card">
        <section>
            <img class="imgTeachercard" src="{{student.avatar_url}}" >
        </section>

        <section class="details">
            <h1>Details</h1>
            <div>
                <div>Name:</div>
                <div>{{student.name}}</div>
            </div>
            <div>
                <div>Age:</div>
                <div>{{student.age}}</div>
            </div>
            <div>
                <div>Bachelor:</div>
                <div>{{student.degree}}</div>
            </div>
            <div>
                <div>Type of class:</div>
                <div>{{student.type_of_class}}</div>
            </div>
            <div>
                <div>Classes:</div>
                <div>
                    {% for class in student.classes %}
                        <span class="classes">{{class}}</span>
                    {% endfor %}
                </div>
            </div>
            <div>
                <div>Since:</div>
                <div>{{student.since}}</div>
            </div>
            <div class="buttons">
                <button class="button" onclick=window.location.href="/student/{{student.id}}/edit">Edit</button>

                <form class="button" action="/student?_method=DELETE" method="POST">
                    <input hidden name="id" value="{{student.id}}" >
                    <button id="delete" type="submit">Delete</button>
                </form>
            </div>

        </section>
    </div>

{% endblock %}