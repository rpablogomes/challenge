{% extends "layout.njk" %}

{% block content %}

    <div class="teacherCard">
        <section>
            <img class="imgTeachercard" src="{{teacherToShow.avatar_url}}" >
        </section>

        <section class="details">
            <h1>Details</h1>
            <div>
                <div>Name:</div>
                <div>{{teacherToShow.name}}</div>
            </div>
            <div>
                <div>Age:</div>
                <div>{{teacherToShow.age}}</div>
            </div>
            <div>
                <div>Bachelor:</div>
                <div>{{teacherToShow.degree}}</div>
            </div>
            <div>
                <div>Type of class:</div>
                <div>{{teacherToShow.type_of_class}}</div>
            </div>
            <div>
                <div>Classes:</div>
                <div>
                    {% for class in teacherToShow.classes %}
                        <span class="classes">{{class}}</span>
                    {% endfor %}
                </div>
            </div>
            <div>
                <div>Since:</div>
                <div>{{teacherToShow.since}}</div>
            </div>
            <button onclick=window.location.href="/teacher-edit/{{teacherToShow.id}}">Edit</button>

        </section>
    </div>

{% endblock %}