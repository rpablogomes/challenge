{% extends "admin/admin_layout.njk" %}

{% block content %}

    <h1>Gerenciar receitas</h1>

    <section class="cards">
        {% for receipt in recipes %}
            <div class="card">
                <div>
                    <img class="image" src="{{receipt.image}}">
                </div>
                <div class="secondFractionOfCard">
                    <div class="foodName">{{receipt.title}}</div>
                    <div class="authorName">{{receipt.chef_name}}</div>
                    <div>
                        <a class="link" href="/admin/recipes/{{receipt.id}}">visualizar</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}