{% extends "client/layout.njk" %}

{% block content %}

    <div id="presentation">
        <div id="textOfPresentation">
            <p id="first">As melhores receitas</p>
            <p id="second">Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
            </p>
        </div>
        <div id="imageOfPresentantion">
            <img id="chef" src=/midias/chef.png alt="image">
        </div>
    </div>

    <h2>Mais Acessadas</h2>

    <div id="cards">

        {% for recipe in recipes %}
            <div class="card">
                <img class="foodImageChef" src={{recipe.image}} alt="image">
                <span class="foodNameChef">{{recipe.title}}<br/></span>
                <span class="cookerChef">por {{recipe.chefs_name}}</span>
            </div>
        {% endfor %}

    </div>

{% endblock %}