{% extends "layout.njk" %}

{% block content %}

    <div class="Card">
        <section>
            <img class="imgTeachercard" src="{{teacher.avatar_url}}" >
        </section>

        <section class="details">
            <h1>Details</h1>
            <div>
                <div>Name:</div>
                <div>{{teacher.name}}</div>
            </div>
            <div>
                <div>Age:</div>
                <div>{{teacher.age}}</div>
            </div>
            <div>
                <div>Bachelor:</div>
                <div>{{teacher.education_level}}</div>
            </div>
            <div>
                <div>Type of class:</div>
                <div>{{teacher.class_type}}</div>
            </div>
            <div>
                <div>Classes:</div>
                <div>
                    {% for class in teacher.subjects_taught %}
                        <span class="classes">{{class}}</span>
                    {% endfor %}
                </div>
            </div>
            <div>
                <div>Since:</div>
                <div>{{teacher.since}}</div>
            </div>
            <div class="buttons">
                <button class="button" onclick=window.location.href="/teacher/{{teacher.id}}/edit">Edit</button>

                <form id="submitDelete" class="button" action="/teacher?_method=DELETE" method="POST">
                    <input hidden name="id" value="{{teacher.id}}" >
                    <button id="delete" type="submit">Delete</button>
                </form>
            </div>

        </section>
    </div>

{% endblock %}